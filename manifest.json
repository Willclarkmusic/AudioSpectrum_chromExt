{
  "manifest_version": 2,
  "name": "Audio Spectrum & Volume Meter",
  "version": "1.0",
  "description": "Displays audio spectrum and volume meters for the current tab's audio.",
  "permissions": ["tabCapture", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Show Audio Meters"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
